<div class="container">
  <h1><%= @cocktail.name %></h1>

  <h3>Ingredients</h3>
  <% @cocktail.doses.each do |dose| %>
    <div class="flex p-2">
      <%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete,
                                   data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt text-primary px-4"></i>
      <% end %>
    </div>
  <% end %>
  <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail),  class: "btn btn-secondary"%>
</div>
